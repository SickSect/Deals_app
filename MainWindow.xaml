<Window x:Class="deals_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deals_app"
        mc:Ignorable="d"
        Title="DEAL TO DO" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgTodoList" FontSize="20" FontWeight="Bold" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Creation Date" Width="180"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Done" Width="80"/>
                <DataGridTextColumn IsReadOnly="False" Header="Event" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
